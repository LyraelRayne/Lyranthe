	<Script file="CyberMacroButtonsButton.lua" />
	
	<CheckButton name="CyberMacroButton" virtual="true"
		inherits="ActionBarButtonTemplate" hidden="false">
	<Scripts>
			<OnLoad>
				CyberMacroButtonsSetButtonMeta(self);
				self:OnLoad();
			</OnLoad>
			<OnAttributeChanged>
				self:UpdateAction(name, value);
			</OnAttributeChanged>
			<OnEvent>
				self:OnEvent(event, ...);
			</OnEvent>
			<PostClick>
				self:UpdateState(button, down);
			</PostClick>
			<OnDragStart>
				if ( LOCK_ACTIONBAR ~= "1" or IsModifiedClick("PICKUPACTION") ) then
					SpellFlyout:Hide();
					PickupAction(self:GetAttribute("action"));
					self:UpdateState();
					self:UpdateFlash();
				end
			</OnDragStart>
			<OnReceiveDrag>
				PlaceAction(self:GetAttribute("action"));
				self:UpdateState();
				self:UpdateFlash();
			</OnReceiveDrag>
			<OnEnter>
				self:SetTooltip();
				self:UpdateFlyout();
				self:LKBOnEnter();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
				self:UpdateFlyout();
			</OnLeave>
			<OnUpdate>
				self:OnUpdate(elapsed);
			</OnUpdate>
		</Scripts>	
	</CheckButton>



