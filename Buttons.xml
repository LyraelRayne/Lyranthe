<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

	<CheckButton name="LyrantheButton" virtual="true"
		inherits="ActionBarButtonTemplate" hidden="false">
		<Scripts>
			<OnEvent>
				self:OnEvent(event, ...);
			</OnEvent>
			<PostClick>
				self:UpdateState(button, down);
			</PostClick>
			<OnDragStart>
				self:OnDragStart(button);
			</OnDragStart>
			<OnReceiveDrag>
				self:OnReceiveDrag();
			</OnReceiveDrag>
			<OnEnter>
				self:SetTooltip();
				self:UpdateFlyout();
				self:LKBOnEnter();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
				self:UpdateFlyout();
			</OnLeave>
			<OnUpdate>
				self:OnUpdate(elapsed);
			</OnUpdate>
		</Scripts>
	</CheckButton>



	<Frame name="LyrantheButtonBar" toplevel="true"
		frameStrata="HIGH" virtual="true" hidden="true">
		<Size>
			<AbsDimension x="500" y="38" />
		</Size>
		<!-- <Scripts> <OnLoad> Lyranthe:AssignStateHandler(self); </OnLoad> </Scripts> -->
	</Frame>
</Ui>


